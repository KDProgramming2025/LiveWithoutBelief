		{
			"label": "Install Android app (debug)",
			"type": "shell",
			"command": ".\\gradlew.bat",
			"args": [
				"app:installDebug",
				"-x",
				"lint",
				"-x",
				"test"
			]
		},
		{
			"label": "Open admin index in default browser",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"start",
				"\"\"",
				"c:\\Users\\MDP\\Desktop\\AD\\LiveWithoutBelief\\admin\\web\\index.html"
			]
		},
		{
			"label": "Deploy LWB server",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"type",
				"c:\\Users\\MDP\\Desktop\\AD\\LiveWithoutBelief\\linux_commands.sh"
			]
		},
		{
			"label": "Install Android app (debug)",
			"type": "shell",
			"command": ".\\gradlew.bat",
			"args": [
				"app:installDebug",
				"-x",
				"lint",
				"-x",
				"test"
			]
		},
		{
			"label": "UI tests (two-phase)",
			"type": "shell",
			"command": ".\\gradlew.bat",
			"args": [
				"uiTests",
				"--no-configuration-cache",
				"--stacktrace"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "UI tests (two-phase, class filter)",
			"type": "shell",
			"command": ".\\gradlew.bat",
			"args": [
				"uiTests",
				"--no-configuration-cache",
				"--stacktrace",
				"-PuiTestClass=${input:uiTestClass}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "uiTestClass",
			"type": "promptString",
			"description": "Fully-qualified test class (e.g., info.lwb.startup.HomeFirstLoadTimingTest)",
			"default": "info.lwb.startup.HomeFirstLoadTimingTest"
		}
	]
}